<Window x:Class="AzharaP2C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzharaP2C"
        mc:Ignorable="d"
                     Title="Login" Height="680" Width="450" Icon="/iconos/chaqueta.png">
        <Grid Margin="10">
            <Grid.Background>
                <ImageBrush ImageSource="/fondo/fondo.jpg" Opacity="0.8"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Label x:Name="lblTitlo"
            Grid.ColumnSpan="2"
            Content="L O G I N "
            FontSize="50"/>

            <Label x:Name="lblCorreo"
            Content="Correo:"
            FontSize="20"
            HorizontalAlignment="Right"
            Grid.Row="1"/>
            <TextBox x:Name="txtCorreo"
            Grid.Row="1"
            Grid.Column="1"/>
            <Label x:Name="lblContraseña"
            Grid.Row="2"
            Content="Contraseña"
            FontSize="20"
            HorizontalAlignment="Right"/>
            <PasswordBox x:Name="pwdContraseña"
            Grid.Row="2"
            Grid.Column="1"
            FontSize="20"
            VerticalAlignment="Center"
            Height="50"
            Margin="10,0"
            Background="#D1ADA7"
            Opacity="0.6"/>
            <Button x:Name="btnLimpiar"
            Content="Limpiar"
            Grid.Row="3" Click="btnLimpiar_Click"/>
            <Button x:Name="btnAceptar"
            Content="Aceptar"
            Grid.Row="3"
            Grid.Column="1" Click="btnAceptar_Click"/>
            <Label x:Name="lblMensaje"
            Foreground="Red"
            Grid.ColumnSpan="2"
            Grid.Row="9"
            FontSize="15"
            />
            <Button x:Name="btnRegistro"
    Content="Registrar"
    Grid.Row="4"
    Grid.ColumnSpan="2"
    Click="btnRegistro_Click"/>
        </Grid>
    </Window>
