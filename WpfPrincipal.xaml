<Window x:Class="AzharaP2C.WpfPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzharaP2C"
        mc:Ignorable="d"
               Title="Mi sistema" Height="500" Width="450" Icon="/iconos/chaqueta.png">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="/fondo/fondo.jpg" Opacity="0.8"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblBienvebida"
       Content="¡BIENVENIDOS A AZHARA!"
       FontSize="30"/>
        <Button x:Name="btnProd"
        Content="Producto"
        Grid.Row="1" Click="btnProd_Click_1"/>
    </Grid>
</Window>
